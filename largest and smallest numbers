#include<stdio.h>
int main ()
{
    int a[10000];
    int largest =a[-10000];
    int smallest=a[-10000];
    int i,n;
    n=sizeof (a)/sizeof (a[0]);
    for(i=n;i>=0;i--)
    {
        printf("enter the number %d\n",i-1);
        scanf("%d",&a[i]);
    }
    for (i=n;i>=0;i--)
    {

        if(largest>a[i])
        {
            largest==a[i];
        }
    
        if(smallest<a[i])
        {
            smallest==a[i];
        }

    }
    printf("largest and smallest values are %d,%d",largest,smallest);
 
    return 0;
}




